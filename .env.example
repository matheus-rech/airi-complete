# AIRI Complete - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI PROVIDER API KEYS (Required)
# =============================================================================

# OpenAI API Key (Required for GPT models and TTS)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Google Gemini API Key (Optional, for Gemini models)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Environment (development, production, testing)
NODE_ENV=development

# Server ports and hosts
PORT=6121
HOST=0.0.0.0

# WebSocket configuration
WS_PORT=6121
WS_HOST=0.0.0.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable core features
ENABLE_VOICE=true
ENABLE_WEBSOCKET=true
ENABLE_MEMORY=true
ENABLE_GAMING=true

# Debug mode (set to false in production)
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (default for development)
DATABASE_URL=sqlite:///database/airi.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/airi

# Supabase (cloud database option - RECOMMENDED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# VOICE SYNTHESIS CONFIGURATION
# =============================================================================

# Default voice settings
DEFAULT_VOICE=alloy
DEFAULT_VOICE_SPEED=1.0
DEFAULT_VOICE_PITCH=1.0

# Voice provider priority (openai, browser)
VOICE_PROVIDER_PRIORITY=openai,browser

# =============================================================================
# MEMORY SYSTEM CONFIGURATION
# =============================================================================

# Memory limits
SHORT_TERM_MEMORY_LIMIT=50
LONG_TERM_MEMORY_LIMIT=500

# Memory promotion threshold (0.0 - 1.0)
MEMORY_PROMOTION_THRESHOLD=0.8

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# Reconnection settings
WS_RECONNECT_INTERVAL=1000
WS_MAX_RECONNECT_ATTEMPTS=10
WS_HEARTBEAT_INTERVAL=30000

# Message queue settings
WS_MESSAGE_QUEUE_SIZE=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5175

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=logs/airi.log

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Production domain
PRODUCTION_DOMAIN=your-domain.com

# SSL configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# CDN configuration
CDN_URL=https://cdn.your-domain.com

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Error tracking (Sentry)
SENTRY_DSN=your_sentry_dsn_here

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Health check endpoint
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# =============================================================================
# ADVANCED FEATURES (Future)
# =============================================================================

# Tool calling and MCP
ENABLE_TOOL_CALLING=false
MCP_ENDPOINT=http://localhost:8000

# Gaming integration
MINECRAFT_SERVER=localhost:25565
DISCORD_BOT_TOKEN=your_discord_bot_token

# Social media integration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

